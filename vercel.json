{
  "builds": [
    {
      "src": "api/api-server.js", 
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json", 
      "use": "@vercel/react"
    }

  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/api-server.js"
    },
    
    {
      "source": "/(.*)",
      "destination": "/frontend/$1" 
    }
  ]
}