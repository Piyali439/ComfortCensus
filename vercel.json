{
  "builds": [
    {
      "src": "api/api-server.js", 
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*", 
      "use": "@vercel/react"
    }

  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/api-server.js"
    },
    
    {
      "source": "/(.*)",
      "destination": "/src/$1" 
    }
  ]
}