
    {
      "builds": [
        {
          "src": "api/api-server.js", 
          "use": "@vercel/node"
        },
        {
          "src": "frontend/package.json", 
          "use": "@vercel/react"
        }
      ],
      
      "rewrites": [
        {
          "source": "/api/(.*)",
          "destination": "/api/api-server.js"
        },
        {
          "source": "/(.*)",
          "destination": "/frontend/$1" 
        }
      ]
    }
       